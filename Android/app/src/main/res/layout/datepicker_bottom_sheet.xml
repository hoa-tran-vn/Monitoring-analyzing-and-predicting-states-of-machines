<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:background="@color/CardBackGround_four_opt_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <DatePicker
            android:backgroundTint="@color/ButtonColor_four"
            android:background="@color/ButtonColor_four"
            android:id="@+id/Bottom_Date_Picker"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarTextColor="@color/ButtonColor_four"
            android:calendarViewShown="false"
            android:spinnersShown="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/Bottom_Date_Picker_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:text="Xong"
                android:fontFamily="@font/barlow_bold"/>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>